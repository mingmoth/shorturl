<div class="container d-flex flex-column align-items-center">
  <div class="title mt-5">
    <h3>Put URL Below</h3>
  </div>
  <div class="img"></div>
  <form action="/" method="POST">
    <div class="urlinput mt-3 d-flex align-items-center">
      <input name="url" id="url" type="text" placeholder="place your url..." style="width: 300px; height: 39px;">
      <button class="btn btn-success ml-2" type="submit">Shrink</button>
    </div>
  </form>

  {{#if invalid}}
  <div class="alert alert-danger mt-2 d-flex justify-content-center align-items-center" role="alert" style="width: 300px; height: 39px;">
    Invalid URL!   Please check URL
  </div>
  {{/if}}
  {{#if shorturl}}
  <div class="output mt-2 d-flex align-items-center">
    <input type="text" placeholder="" value="{{shorturl}}" style="width: 300px; height: 39px;" disabled>
    <button class="btn btn-warning ml-2" type="submit" style="width: 76.45px; height: 39px;">Copy</button>
  </div>
  {{/if}}
  

</div>